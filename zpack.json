{
  "$schema": "https://github.com/glzr-io/zebar/raw/v3.1.1/resources/zpack-schema.json",
  "name": "my-widget-pack",
  "version": "0.0.0",
  "description": "",
  "tags": [],
  "previewImages": [
    "./resources/preview-image-1.png"
  ],
  "repositoryUrl": "",
  "widgets": [
    {
      "name": "my-cool-widget",
      "htmlPath": "my-cool-widget/index.html",
      "zOrder": "normal",
      "shownInTaskbar": false,
      "focused": false,
      "resizable": false,
      "transparent": true,
      "includeFiles": [
        "my-cool-widget/**"
      ],
      "caching": {
        "defaultDuration": 604800,
        "rules": [
          {
            "urlRegex": "",
            "duration": 604800
          }
        ]
      },
      "privileges": {
        "shellCommands": []
      },
      "presets": [
        {
          "name": "default",
          "anchor": "top_center",
          "offsetX": "0px",
          "offsetY": "0px",
          "width": "100%",
          "height": "20%",
          "monitorSelection": {
            "type": "all"
          },
          "dockToEdge": {
            "enabled": false,
            "edge": null,
            "windowMargin": "0px"
          }
        }
      ]
    }
  ]
}
